<h1>All Users</h1>

  <table class="table">
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin?</th>
    </tr>
      <% @users.each do |user| %>
        <tr>
          <td>
            <a href="<%= "users/#{user.id}" %>">
              <%= user.username %>
            </a>
          </td>

          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.admin %>
              <%= link_to("Disable Admin",
              user_path(user, "user[admin]" => false),
              :method => :put,
              :confirm => "Sure?",
              :class=>"text-warning") %>

            <% else %>
              <%= link_to("Make Admin",
                          user_path(user, "user[admin]" => true),
                          :method => :put,
                          :confirm => "Sure?") %>
            <% end %>
          </td>
        </tr>

      <% end %>
  </table>

