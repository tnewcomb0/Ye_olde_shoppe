
<h1>Shopping Cart</h1>

  <table class="table">
    <tr>
      <th>Item</th>
      <th>Price</th>
    </tr>
      <% @active_items.each do |item| %>
        <tr>
          <td>
            <a href="<%= "categories/#{item.product.category.id}/products/#{item.product.id}" %>">
              <%= item.product.title %>
            </a>
          </td>

          <td><%= item.product.price %></td>
        </tr>

      <% end %>
  </table>

